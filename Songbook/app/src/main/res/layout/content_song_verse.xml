<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="?attr/primaryDarkColor"
    android:orientation="vertical"
    android:padding="6dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sectionTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="V1"
            android:textColor="?attr/secondaryDarkTextColor"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/chorusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/chorus"
            android:textColor="?attr/secondaryTextColor" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="6dp"
        android:text="Majd ha Jézus vére érdemében mind\n
Látjuk eltörölve minden bűneink,\n
Majd ha mind fehér ruhába öltözünk,\n
Oly boldogok leszünk."
        android:textColor="?attr/primaryTextColor"
        tools:ignore="HardcodedText" />

</LinearLayout>
