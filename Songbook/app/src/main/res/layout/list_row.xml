<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lytPattern"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/primaryDarkColor"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lytGrab"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewGrab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:contentDescription="@string/drag"
            android:padding="16dp"
            app:srcCompat="@drawable/ic_drag_handle_black_24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <include layout="@layout/content_song_list_row" />
    </LinearLayout>

</LinearLayout>