<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.TextFlow?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/8.0.121" fx:controller="projector.controller.UpdateController">
    <top>
        <Label text="Update available" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="4.0"/>
            </BorderPane.margin>
        </Label>
    </top>
    <center>
        <ScrollPane prefHeight="400" prefWidth="400">
            <TextFlow fx:id="textFlow">
            </TextFlow>
        </ScrollPane>
    </center>
    <bottom>
        <Button fx:id="updateButton" onAction="#updateButtonOnAction" text="Update" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="4.0"/>
            </BorderPane.margin>
        </Button>
    </bottom>
</BorderPane>
