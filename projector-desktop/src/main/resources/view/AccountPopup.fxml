<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane fx:id="accountPopupPane" styleClass="border-pane" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="projector.controller.AccountPopupController">
    <center>
        <VBox>
            <Label text="Logged in as:"/>
            <Label fx:id="userLabel" text="example@domain.com"/>
            <Separator>
                <VBox.margin>
                    <Insets bottom="4.0" top="4.0"/>
                </VBox.margin>
            </Separator>
            <Button focusTraversable="false" onAction="#handleLogout" text="Log Out"/>
        </VBox>
    </center>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</BorderPane>
